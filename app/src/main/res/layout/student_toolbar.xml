<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundBlue">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentToolbar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/ivBack"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/txtToolClassName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ClassName"
                    android:textColor="#3C3939"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtToolSubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtToolClassName"
                    android:layout_centerHorizontal="true"
                    android:text="SubName"
                    android:textColor="#4E4C4C"
                    android:textSize="18sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/ivSave"
                android:src="@drawable/ic_baseline_save_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                 />

        </RelativeLayout>





    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>