<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherAbout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="153dp"
                android:layout_height="116dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/attender_logo" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attender"
                android:textColor="@color/backgroundBlue"
                android:textSize="45sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Welcome"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/guideline4" />

            <TextView
                android:id="@+id/txtWelAns"
                android:layout_width="340dp"
                android:layout_height="111dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Attender get's you the best modern tech within its simplest form with excellent and user friendly U.I helping you to focus only on the moto of app"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

            <TextView
                android:id="@+id/txtMaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Maker"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtWelAns" />

            <TextView
                android:id="@+id/txtMakerAns"
                android:layout_width="360dp"
                android:layout_height="75dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text='I am "Rishabh Garg" , currently pursuing my B.tech in C.S branch.'
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtMaker" />

            <TextView
                android:id="@+id/txtHowItWorks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="How it works : "
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txtContactAns2" />

            <TextView
                android:id="@+id/txtClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Class"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtHowItWorks" />

            <TextView
                android:id="@+id/txtClassAns"
                android:layout_width="338dp"
                android:layout_height="108dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:text="You can add new class by clicking on the float button there and to delete a class you just have to long press the class"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtClass" />

            <TextView
                android:id="@+id/txtAttToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Attendance toolbar"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtClassAns" />

            <ImageView
                android:id="@+id/ivTool"
                android:layout_width="394dp"
                android:layout_height="217dp"
                android:layout_marginTop="10dp"
                android:cropToPadding="false"
                android:src="@mipmap/toolbar"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtAttToolBar" />

            <TextView
                android:id="@+id/txtUpdatePrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Update previous button"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/ivTool" />

            <TextView
                android:id="@+id/txtUpdPrevAns"
                android:layout_width="338dp"
                android:layout_height="80dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:text="To get the stats of attendance taken on the particular date just tap two times"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtUpdatePrev" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="106dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />

            <TextView
                android:id="@+id/txtMakerAns2"
                android:layout_width="353dp"
                android:layout_height="84dp"
                android:layout_marginLeft="2dp"
                android:text="Interested in acquiring more and more knowledge available in this booming field of development"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtMakerAns" />

            <TextView
                android:id="@+id/txtContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contact"
                android:textColor="@color/backgroundBlue"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtMakerAns2" />

            <TextView
                android:id="@+id/txtContactAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="E-mail : Rishabhgarg.20000@gmail.com"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/txtContact" />

            <TextView
                android:id="@+id/txtContactAns2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phone : 9058832180"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/txtContactAns" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</RelativeLayout>