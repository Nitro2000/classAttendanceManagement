<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classattendancemanagement">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/attender_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/attender_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClassAttendanceManagement">
        <activity android:name=".TakeAttendance"
            android:screenOrientation="portrait"/>
        <activity android:name=".TeacherProfile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TeacherClass"
            android:label="Class"
            android:theme="@style/Theme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Teacher"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignupTeacher"
            android:screenOrientation="portrait"/>
        <activity android:name=".TeacherAbout"
            android:label="About Us"
            android:theme="@style/Theme"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>